{
  "name": "css-golf",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://css-golf.netlify.com",
  "dependencies": {
    "@icons-pack/react-simple-icons": "^2.3.0",
    "@wisetail/tokens": "^1.0.0",
    "@wisetail/wds-button": "^1.0.0",
    "@wisetail/wds-icon": "^1.0.0",
    "@wisetail/wds-panel": "^1.1.1",
    "dom-to-image": "^2.6.0",
    "firebase": "^7.8.2",
    "firebase-admin": "^8.9.2",
    "firebase-functions": "^3.3.0",
    "markdown-to-jsx": "^6.11.0",
    "node-sass": "^4.13.1",
    "pixelmatch": "^5.1.0",
    "prismjs": "^1.19.0",
    "react": "^16.4.0",
    "react-async": "^10.0.0",
    "react-dom": "^16.4.0",
    "react-firestore": "^1.0.1",
    "react-instantsearch-dom": "^6.3.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "^3.2.0",
    "react-simple-code-editor": "^0.11.0",
    "react-transition-group": "^4.3.0",
    "slugify": "^1.3.0",
    "styled-components": "^5.0.1"
  },
  "scripts": {
    "start": "sh -ac '. ./.env.dev;   firebase use dev && react-scripts start'",
    "build": "react-scripts build",
    "build:dev": "firebase use dev && react-scripts build && firebase deploy",
    "build:stage": "firebase use stage && react-scripts build && firebase deploy",
    "build:prod": "firebase use prod && react-scripts build && firebase deploy",
    "build:functions": "cd functions && yarn install && cd lint-styles && yarn install && cd ../generate-styles && yarn install && ls -l /opt/build/repo/functions/*/",
    "dev": "sh -ac '. ./.env.dev;   yarn build:dev'",
    "stage": "sh -ac '. ./.env.stage; yarn build:stage'",
    "prod": "sh -ac '. ./.env.prod;  yarn build:prod'",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "lint:eslint": "eslint \"**/*.js\" .",
    "lint:prettier": "prettier \"**/*.{js,scss}\" --check --ignore-path .eslintignore",
    "format": "npm run format:eslint && npm run format:prettier",
    "format:eslint": "eslint \"**/*.js\" . --fix",
    "format:prettier": "prettier \"**/*.{js,scss}\" --write --ignore-path .eslintignore"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "bluebird": "^3.7.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "prettier": "^1.19.1"
  }
}
